extends ../../layouts/backend_layout

block content 
    main#main.main
        .row.align-items-center.site-breadcrumb.mb-3
            h1 Add Payment Method
            nav
                ol.breadcrumb
                    li.breadcrumb-item
                        a(href=`/${store_id}/dashboard`) Dashboard
                    li.breadcrumb-item
                        a(href=`/${store_id}/payment-methods`) Payment Listing
                    li.breadcrumb-item.active Add Payment Method
                    
        // End Page Title
        section.section.profile
            div
                .row
                    .col-xl-4
                        div
                            .profile-card.pt-4.d-flex.flex-column.card_lef
                                h2 New payment method
                                h6 This information can be found in the dashboard of your payment provider
                    .col-xl-8
                        .card
                            .card-body.pt-3
                                // Bordered Tabs
                                .tab-content.pt-2
                                    form#add_payment_method.row.g-3(method="post" autocomplete="off")
                                        input.form-control( type= 'hidden', name= "store_id", value= store_id)
                                        .col-12
                                            select.form-select#select_payment_method(name="method_name")
                                                option(selected) Select a payment method
                                                option(
                                                    value="Stripe"
                                                    disabled= method_names.includes("Stripe")
                                                ) Stripe-Credit Card
                                                option(
                                                    value="PayPal"
                                                    disabled= method_names.includes("PayPal")
                                                ) PayPal Express
                                                option(
                                                    value="Checkout.com"
                                                    disabled= method_names.includes("Checkout.com")
                                                ) Checkout.com
                                                option(
                                                    value="Klarna"
                                                    disabled= method_names.includes("Klarna")
                                                ) Klarna

                                        div.payment-method-keys        
                                            .col-12-field
                                                label.form-label  Publish Key
                                                input.form-control#publishable_key.required(
                                                    type="text",
                                                    name="publishable_key"
                                                    autocomplete="new_publishable_key"
                                                )
                                            .col-12-field
                                                label.form-label Secret Key
                                                input.form-control#secret_key.required(
                                                    type="password",
                                                    name="secret"
                                                    autocomplete="new_secret"
                                                )
                                            div
                                                .profile-card.pt-4.d-flex.flex-column.card_lef
                                                    h2
                                                        | Additional instructions
                                                    h6
                                                        | Follow these steps to complete your checkout integration                           
                                        section#stripe-method.col-xl-12
                                           
                                            // Bordered Tabs
                                            .tab-content.pt-2
                                                h6#heading-tag.exit_ul
                                                    | To find your API Keys open your Stripe Console 
                                                   
                                                    ul
                                                        li#li-first
                                                                            
                                                            | 1. Go to your Stripe Account > Developers > API Keys
                                                        li
                                                                                
                                                            | 2. Copy your Publishable Key and Secret Key from the &quot;Standard Keys&quot; section
                                                        li
                                                                            
                                                            | 3. Paste them into Checkout X and Save
                                                            br
                                                            a(href="https://help.checkout-x.com/en/articles/4046994-enable-credit-card-payments-with-stripe") If have any trouble setting it up, make sure to follow the complete Stripe instructions                

                                        section#paypal-method.col-xl-12
                                           
                                            // Bordered Tabs
                                            .tab-content.pt-2
                                                h6#heading-tag.exit_ul
                                                    | To find your API Keys open your PayPal Console 
                                                   
                                                    ul
                                                        li#li-first
                                                                            
                                                            | 1. Go to your Paypal Account > Dashboard > Apps & Credentails >Select app name
                                                        li
                                                                                
                                                            | 2. Copy your ClientId Key and Secret Key from the &quot;SANDBOX API CREDENTIALS&quot; section
                                                        li
                                                                            
                                                            | 3. Paste them into Checkout X and Save
                                                            br
                                                                
                                        section#checkout-method.col-xl-12
                                          
                                            // Bordered Tabs
                                            .tab-content.pt-2
                                                h6#heading-tag.exit_ul
                                                    | To find your API Keys open your Checkout.com Console 
                                                   
                                                    ul
                                                        li#li-first
                                                                            
                                                            | 1. Go to your Checkout.com Account > Developers > Keys
                                                        li
                                                                                
                                                            | 2. Copy your Public Key and Secret Key from the &quot;Manage Keys&quot; section
                                                        li
                                                                            
                                                            | 3. Paste them into Checkout X and Save
                                                            br
                                            
                                        section#klarna-method.col-xl-12
                                            
                                            // Bordered Tabs
                                            .tab-content.pt-2
                                                h6#heading-tag.exit_ul
                                                    | To find your API Keys open your Klarna Console 
                                                   
                                                    ul
                                                        li#li-first
                                                                            
                                                            | 1. Go to your Klarna Account > Developers > API Keys
                                                        li
                                                                                
                                                            | 2. Copy your Publishable Key and Secret Key from the &quot;Standard Keys&quot; section
                                                        li
                                                                            
                                                            | 3. Paste them into Checkout X and Save
                                                            br
                                                                            
                                        .d-flex.justify-content-end
                                            button.btn.btn-primary(type="submit") Save Payment Method
block scripts
    script(type='text/javascript', src='/assets/js/custom/payment_methods.js')