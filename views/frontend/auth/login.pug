extends ../../layouts/frontend

block content 
    .container
        section.section.register.min-vh-100.d-flex.flex-column.align-items-center.justify-content-center.py-4
            .container
                .row.justify-content-center
                    .col-lg-4.col-md-6.d-flex.flex-column.align-items-center.justify-content-center
                        .d-flex.justify-content-center.py-4
                            a.logo.d-flex.align-items-center.w-auto(href="#")
                                img(src='/assets/img/logo_checkout.png', alt='logo')
                                
                        // End Logo
                        .card.mb-3
                            .card-body
                                .pt-4.pb-2
                                    h5.card-title.text-center.pb-0.fs-4 Login to Your Account
                                    p.text-center.small Enter your email &amp; password to login
                                form#login_form.row.g-3(method="post", autocomplete="off")
                                    .col-12
                                        label.form-label Email
                                        input.form-control.required.login_email(type="email", name="email" id="email")
                                    .col-12
                                        label.form-label Password
                                        input.form-control.required.login_pass(type="password", name="password" id="password")

                                    .col-12
                                        .form-check
                                            input#rememberMe.form-check-input(type="checkbox", name="user_status", value="true")
                                            label.form-check-label(for="user_status") Remember me
                                            p.small.mb-0
                                                a#forgot_pwd_link(href="/forgotPassword" disabled) Forgot Password?
                                    .col-12
                                        button#login_button_id.btn.btn-primary.w-100(type="submit" disabled) Login 
                                    .col-12
                                        p.small.mb-0 Don&apos;t have account? 
                                            a#create_account_link(href="/register" disabled) Create an account

block scripts
    script(type='text/javascript', src='/assets/js/custom/auth.js')
    